>>> import sys, os
>>> sys.path.insert(0, os.path.join('.', '..', '..'))
>>> from qtodotxt.lib import filters,todolib
>>> import qtodotxt.ui.controllers.main_controller
>>> from qtodotxt.lib.filters import SimpleTextFilter, FutureFilter

========================================
1. SimpleTextFilter
========================================

>>> task = todolib.Task('do Something')
>>> filterSTF = SimpleTextFilter("Som")
>>> resultTasks = todolib.filterTasks([filterSTF],[task])
>>> len(resultTasks)
1
>>> resultTasks[0].text
'do Something'

========================================
1. SimpleTextFilter with parentheses
========================================

>>> task_parenth = todolib.Task('(A) do Something')
>>> filterSTF_par1 = SimpleTextFilter("(A")
>>> resultTasks = todolib.filterTasks([filterSTF],[task_parenth])
>>> len(resultTasks)
1
>>> resultTasks[0].text
'(A) do Something'

>>> filterSTF_par2 = SimpleTextFilter("(A)")
>>> resultTasks = todolib.filterTasks([filterSTF_par2],[task_parenth])
>>> len(resultTasks)
1
>>> resultTasks[0].text
'(A) do Something'

========================================
2. SimpleTextFilter empty filter string
========================================

>>> filterSTF_or11 = SimpleTextFilter("")
>>> resultTasks = todolib.filterTasks([filterSTF_or11], [task])
>>> len(resultTasks)
1
>>> resultTasks[0].text
'do Something'

========================================
3. SimpleTextFilter case insensitive
========================================

>>> filterSTFi = SimpleTextFilter("som")
>>> resultTasks = todolib.filterTasks([filterSTFi],[task])
>>> len(resultTasks)
1
>>> resultTasks[0].text
'do Something'

========================================
4. SimpleTextFilter OR condition
========================================

>>> filterSTF_or1 = SimpleTextFilter("Som | zzz")
>>> resultTasks = todolib.filterTasks([filterSTF_or1], [task])
>>> len(resultTasks)
1
>>> resultTasks[0].text
'do Something'

>>> filterSTF_or2 = SimpleTextFilter("yyy | zzz")
>>> resultTasks = todolib.filterTasks([filterSTF_or2], [task])
>>> len(resultTasks)
0

========================================
5. SimpleTextFilter AND condition (case insensitive)
========================================

>>> filterSTF_or3 = SimpleTextFilter("som thing")
>>> resultTasks = todolib.filterTasks([filterSTF_or3], [task])
>>> len(resultTasks)
1
>>> resultTasks[0].text
'do Something'

>>> filterSTF_or4 = SimpleTextFilter("som, thing")
>>> resultTasks = todolib.filterTasks([filterSTF_or4], [task])
>>> len(resultTasks)
1
>>> resultTasks[0].text
'do Something'

>>> filterSTF_or5 = SimpleTextFilter("zzz thing")
>>> resultTasks = todolib.filterTasks([filterSTF_or5], [task])
>>> len(resultTasks)
0

